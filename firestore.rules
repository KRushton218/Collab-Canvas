rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Shapes collection - NEW SCHEMA (1 document per shape)
    // Each shape is at /shapes/{shapeId}
    // OPTIMIZED: Minimal validation for batch operation performance
    match /shapes/{shapeId} {
      // Anyone authenticated can read shapes
      allow read: if request.auth != null;
      
      // Anyone authenticated can create/update/delete shapes
      // Note: Schema validation removed for performance (batch operations with 500+ shapes)
      // Note: Locking handled in RTDB, not Firestore
      // Trust: Client-side validation sufficient for authenticated users
      allow create, update, delete: if request.auth != null;
    }
    
    // OLD SCHEMA (deprecated) - /canvas/{canvasId}
    // Keep rules in case any old data exists
    match /canvas/{canvasId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}

